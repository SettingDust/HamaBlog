@import '../../node_modules/material-colors/dist/colors.styl';
@import '../../node_modules/material-shadows/material-shadows.styl'

.header {
  height: 64px;
  padding-left: 14px;
  padding-right: 14px;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  color: md-dark-text-primary;
  background-color: md-white;
  transition: 125ms ease-in-out;
  z-index: 10;
  position: relative;
  
  > .title {
    font-size: 1.25rem;
    font-weight: 500;
    user-select: none;
    text-decoration: none;
    padding-left: 16px;
    color: md-dark-icons-active;
    
    :visited, :focus {
      color: md-dark-icons-active;
    }
    
    @media (max-width: 768px) {
      padding-left: 4px;
    }
  }
  
  > nav {
    display: flex;
    flex-wrap: nowrap;
    width: 100%;
    margin-right: 16px;
    
    .space {
      flex: 1 0;
    }
    
    ul {
      display: flex;
      list-style: none;
      margin: 0;
      
      li {
        a {
          display: flex;
          font-size: 24px;
          line-height: 24px;
          border-radius: 50%;
          
          .icon {
            padding: 8px;
            display: flex;
            
            svg {
              height: 24px;
              width: 24px;
              fill: md-dark-icons-active;
            }
          }
          
          &:hover {
            background-color: rgba(0, 0, 0, 0.06);
          }
        }
      }
    }
    @media (max-width: 768px) {
      margin-right: 0;
    }
  }
  
  &.on {
    z-depth(4);
  }
  
  @media (max-width: 768px) {
    padding-left: 16px;
    padding-right: 16px;
  }
}
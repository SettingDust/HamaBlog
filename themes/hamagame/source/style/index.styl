@import '../../node_modules/material-colors/dist/colors.styl'
@import '../../node_modules/material-shadows/material-shadows.styl'

main {
  #articles {
    display: flex;
    flex-wrap: wrap;
    padding: 24px 48px;
    
    .card {
      width: calc(25% - 16px);
      margin: 8px;
      box-sizing: border-box;
      transition: 225ms ease-in-out;
      position: relative;
      cursor: pointer;
      
      &:hover {
        .title {
          color: md-blue-500;
        }
      }
      
      .title {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        @media (max-width: 768px) {
          padding-top: 4px;
          padding-left: 6px;
          padding-right: 6px;
          font-size: 0.875em;
        }
      }
      
      .title.indent {
        padding-left: 0;
      }
      
      .desc {
        color: md-dark-text-secondary;
        @media (max-width: 768px) {
          padding-bottom: 4px;
          padding-left: 6px;
          padding-right: 6px;
        }
      }
      
      .content {
        height = (339.8 / 1536) * 0.625 * 100vw;
        width: 100%;
        height: height;
        background-color: md-grey-50;
        overflow: hidden;
        border-radius: 8px;
        box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.12);
        font-size: 14px;
        
        img {
          width: 100%;
          height: 100%;
          opacity: 0;
          transition: 225ms ease-in-out;
        }
        
        @media (max-width: 1200px) {
          height: height * 2;
        }
        @media (max-width: 768px) {
          box-shadow: 0 1px rgba(0, 0, 0, 0.12);
          border-radius: 0;
        }
      }
      
      &.record {
        &:before {
          content: '录播'
          padding: 2px 6px;
          font-size: 12px;
          background-color: rgba(255, 152, 0, 0.87);
          color: md-light-text-primary;
          position: absolute;
          left: 4px;
          top: 4px;
          border-radius: 4px;
        }
      }
      
      &.post {
        &:before {
          content: '视频'
          padding: 2px 6px;
          font-size: 12px;
          background-color: rgba(139, 195, 74, 0.87);
          color: md-light-text-primary;
          position: absolute;
          left: 4px;
          top: 4px;
          border-radius: 4px;
        }
      }
      
      &.live {
        .content {
          img {
            width: auto;
            height: 100%;
            margin-left: -5.4%;
          }
        }
        
        &:before {
          content: '直播'
          padding: 2px 6px;
          font-size: 12px;
          background-color: rgba(33, 150, 243, 0.87);
          color: md-light-text-primary;
          position: absolute;
          left: 4px;
          top: 4px;
          border-radius: 4px;
        }
      }
      
      &.article {
        .content {
          display: flex;
          justify-content: center;
          align-items: center;
          font-size: 1.25rem;
        }
        
        &:before {
          content: '文章'
          padding: 2px 6px;
          font-size: 12px;
          background-color: rgba(244, 67, 54, 0.87);
          color: md-light-text-primary;
          position: absolute;
          left: 4px;
          top: 4px;
          border-radius: 4px;
        }
        
      }
      
      @media (max-width: 1024px) {
        width: calc(50% - 16px);
      }
      @media (max-width: 768px) {
        width: calc(50% - 8px);
        border-radius: 8px;
        margin: 4px;
        overflow: hidden;
        z-depth-2dp()
      }
    }
    
    @media (max-width: 1200px) {
      padding: 24px;
    }
    
    @media (max-width: 768px) {
      padding: 8px;
    }
  }
}